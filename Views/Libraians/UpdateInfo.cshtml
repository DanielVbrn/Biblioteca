@model Livraria.Models.Libraian

<h1>Atualizar Informações do Bibliotecário</h1>

<form asp-action="UpdateInfo" method="post">
    <div class="form-group">
        <label for="Name">Nome:</label>
        <input type="text" id="Name" name="Name" value="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Address">Endereço:</label>
        <input type="text" id="Address" name="Address" value="@Model.Address" class="form-control" />
    </div>
    <div class="form-group">
        <label for="MobileNo">Número de Telefone:</label>
        <input type="text" id="MobileNo" name="MobileNo" value="@Model.MobileNo" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Atualizar</button>
</form>
